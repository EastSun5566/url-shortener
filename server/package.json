{
  "name": "server",
  "scripts": {
    "dev": "yarn db && NODE_ENV=development DEBUG=dev nodemon ./bin/www",
    "debug": "yarn db && NODE_ENV=development DEBUG=dev node --inspect ./bin/www",
    "start": "NODE_ENV=production ./node_modules/.bin/pm2-runtime ./bin/www -i max",
    "start:docker": "docker-compose up",
    "build:image": "docker-compose build",
    "db": "brew services start mongodb-community",
    "lint": "eslint --fix --ignore-path .gitignore ."
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "boom": "^7.3.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.4",
    "debug": "~2.6.9",
    "dotenv": "^6.1.0",
    "express": "~4.16.0",
    "express-jwt": "^6.0.0",
    "express-rate-limit": "^3.4.0",
    "get-some-cool-emojis": "^1.1.6",
    "helmet": "^3.16.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.5",
    "morgan": "~1.9.0",
    "pm2": "^3.4.1"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "husky": "^1.3.1",
    "nodemon": "^1.18.10"
  }
}
